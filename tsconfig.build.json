{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "sourceMap": true,
    "outDir": "dist",
    "sourceRoot": "./src",
    "rootDir": "./src",
    "baseUrl": ".",
    "paths": {
      "@*": [
        "./*"
      ],
      "*": [
        "node_modules/*"
      ]
    }
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "temp"
  ]
}
