{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "sourceMap": true,
    "outDir": "dist",
    "sourceRoot": "./src",
    "resolveJsonModule": true,
    "rootDir": "./src",
    "baseUrl": ".",
    "paths": {
      "@*": [
        "./*"
      ]
    },
    "types": [
      "@types/jest"
    ]
  },
  "include": [
    "src/**/*.ts"
  ],
  "ts-node": {
    "transpileOnly": true,
    "files": true
  },
  "exclude": [
    "node_modules",
    "misc",
    "temp",
    "coverage"
  ]
}
